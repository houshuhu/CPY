@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>TonyKit 后台管理系统</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/easyui/css")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Content/Scripts/jqueryui.layout.common.js" type="text/javascript"></script>
    @*<link rel="stylesheet/less" type="text/css" href="~/Content/less/main.layout.common.less" />
    <script src="~/Content/Scripts/less.min.js"></script>*@
</head>
<body class="easyui-layout">
    <div data-options="region:'north',border:false" style="height: 70px; background: #2596ea; padding: 10px">
        <p style="width: 300px; height: 50px; line-height: 50px; color: #fff; margin: 0; float: left;font-size: 25px">TonyKit 后台管理系统</p>
    </div>
    <div data-options="region:'west',split:true,title:'导航菜单'" style="width: 170px;">
        <div class="easyui-accordion" data-options="fit:true,border:false">
            <div title="系统管理" data-options="selected:true,iconCls:'own-icon own-icon-sys'">
                <ul>
                    <li>
                        <div>
                            <a href="javascript:void(0)" class="layout-menu" src="@Url.Action("Index", "SysModule", new {area = "Admin"})"><span class="own-icon own-icon-nav ">&nbsp;</span>模块管理</a>
                        </div>
                    </li>
                    <li>
                        <div><a href="javascript:void(0)" class="layout-menu" src="@Url.Action("Index", "SysFunction", new {area = "Admin"})"><span class="own-icon own-icon-nav ">&nbsp;</span>菜单管理</a></div>
                    </li>
                </ul>
            </div>
            <div title="系统管理" data-options="iconCls:'own-icon own-icon-sys'">
                <ul>
                    <li>
                        <div>
                            <a href="javascript:void(0)" class="layout-menu" iconcls="icon-nav" src="@Url.Action("Index", "SysModule", new {area = "Admin"})">模块管理</a>
                        </div>
                    </li>
                    <li>
                        <div><a href="javascript:void(0)" class="layout-menu" src="@Url.Action("Index", "User", new {area = "User"})">用户管理</a></div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div data-options="region:'south',border:false" style="height: 40px; padding: 10px;">south region</div>

    <div data-options="region:'center'">
        <div id="tabs" class="easyui-tabs" style="height: 100%">
            <div title="主页" style="padding: 20px; display: none; border: 0">
                this is MainPage
            </div>
        </div>
    </div>
    <div id="mm" class="easyui-menu cs-tab-menu">
        <div id="refresh">刷新</div>
        <div class="menu-sep"></div>
        <div id="close">关闭</div>
        <div id="closeother">关闭其他</div>
        <div id="closeall">关闭全部</div>
    </div>
</body>
</html>
